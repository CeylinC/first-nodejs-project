<aside id="aside" class="col-md-4">

  <div class="widget">
    <div class="widget-search">
      <input
        class="search-input form-control"
        type="text"
        placeholder="Search"
      />
      <button class="search-btn" type="button"><i
          class="fas fa-search"
        ></i></button>
    </div>
  </div>

  <div class="widget">
    <h3 class="mb-3">Categories</h3>
    <div class="widget-category">
      {{#each categories}}
        <a href="#">{{name}}</a>
      {{/each}}
    </div>
  </div>

  <div class="widget">
    <h3 class="mb-3">Latest Posts</h3>

    {{#each lastestPosts}}
    <div class="widget-post">
      <a href="#">
        <img class="img-fluid" src="{{post_image}}" alt="" />{{title}}
      </a>
      <ul class="blog-meta">
        <li>{{dayFormat date}}</li>
      </ul>
    </div>
    {{/each}}
  </div>
</aside>